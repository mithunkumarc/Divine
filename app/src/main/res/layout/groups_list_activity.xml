    <!-- The first child in the layout is for the main Activity UI-->
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="divine.calcify.activities.GroupsListActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <android.support.v7.widget.Toolbar
            android:id="@+id/group_list_grid_toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:titleTextColor="@android:color/white"
            android:background="@color/colorPrimary">
        </android.support.v7.widget.Toolbar>


            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/location_layout"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <!--android:onClick="openLocationWindow"-->
                <TextView
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:id="@+id/group_list_hs_location"
                    android:text="Marathalli"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:paddingTop="4dp"
            android:layout_below="@+id/location_layout"
            android:id="@+id/groups_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />






    </LinearLayout>


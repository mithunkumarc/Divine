<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/hs_cardview_groupList_with_location"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/header"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <TextView
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cv_divineservice_name"
                android:layout_alignParentTop="true"
                android:textSize="25sp"
                />
            <!--below textview currently not using-->
            <TextView
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cv_divineservice_text"
                android:layout_below="@+id/cv_divineservice_name"
                />
            <!-- display two services on group image , start -->
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout"
                android:background="@drawable/ganapathi"
                android:layout_width="match_parent"
                android:layout_height="200dp" >
                <ImageView
                    android:id="@+id/myImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     />
                <LinearLayout
                    android:paddingTop="150dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="5dp"
                        android:layout_alignLeft="@id/myImageView"
                        android:layout_alignTop="@id/myImageView"
                        android:layout_alignRight="@id/myImageView"
                        android:layout_alignBottom="@id/myImageView"
                        android:gravity="bottom"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/hs_services_list_recylerview"
                        />
                    <TextView
                        android:elevation="4dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:clickable="true"
                        android:id="@+id/hs_service_list_button_view_all"
                        android:layout_marginTop="4dp"
                        android:text="View all"
                        android:background="@color/backgroud_view_color"
                        android:layout_width="75dp"
                        android:layout_height="38dp" />
                </LinearLayout>
            </RelativeLayout>
            <!-- display two services on group image , end   -->
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
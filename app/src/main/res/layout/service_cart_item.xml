<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/sci_cart_service_name"
                    android:layout_marginLeft="10dp"
                    android:textSize="25dp"
                    android:gravity="center_vertical"
                    android:text="Service Name"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/sci_cart_service_cost"
                    android:layout_marginRight="10dp"
                    android:text="cost"
                    android:textSize="25dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:id="@+id/sci_cart_service_provider_name"
                android:layout_marginLeft="10dp"
                android:text="service provider name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="15dp"
                    android:id="@+id/sci_cart_date_time"
                    android:layout_alignParentLeft="true"
                    android:text="10/12/16, 10-11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/sci_cart_service_status"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/sci_cart_date_time"
                    android:textColor="#FF0000"
                    android:textStyle="italic"
                    android:text="Change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/sci_remove_link"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:text="Remove"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="divine.calcify.fragments.ServiceCartFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/cart_service_recycler_view"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="412dp"></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/cart_service_purchase_order"
        android:clickable="true"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="Purchase Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cart_service_total"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
